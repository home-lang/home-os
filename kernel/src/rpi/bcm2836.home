// home-os Raspberry Pi BCM2836 Support
// Broadcom BCM2836 SoC (Raspberry Pi 2)

import "../core/foundation.home" as foundation

const BCM2836_PERI_BASE: u64 = 0x3F000000
const BCM2836_GPIO_BASE: u64 = 0x3F200000
const BCM2836_UART_BASE: u64 = 0x3F201000

export fn bcm2836_init() {
  foundation.serial_write_string("[BCM2836] Initializing Raspberry Pi 2 support\n")
}

export fn bcm2836_get_peripheral_base() -> u64 {
  return BCM2836_PERI_BASE
}
