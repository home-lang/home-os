// home-os Raspberry Pi RP1 Support
// RP1 I/O Controller (Raspberry Pi 5)

import "../core/foundation.home" as foundation

const RP1_BASE: u64 = 0x1F00000000

const RP1_GPIO_BASE: u64 = 0x1F000D0000
const RP1_UART_BASE: u64 = 0x1F00030000
const RP1_SPI_BASE: u64 = 0x1F00050000
const RP1_I2C_BASE: u64 = 0x1F00070000

export fn rp1_init() {
  foundation.serial_write_string("[RP1] Initializing Raspberry Pi 5 I/O controller\n")
}

export fn rp1_get_base() -> u64 {
  return RP1_BASE
}

export fn rp1_get_gpio_base() -> u64 {
  return RP1_GPIO_BASE
}
