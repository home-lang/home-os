// home-os Raspberry Pi BCM2837 Support
// Broadcom BCM2837 SoC (Raspberry Pi 3)

import "../core/foundation.home" as foundation

const BCM2837_PERI_BASE: u64 = 0x3F000000
const BCM2837_GPIO_BASE: u64 = 0x3F200000

export fn bcm2837_init() {
  foundation.serial_write_string("[BCM2837] Initializing Raspberry Pi 3 support\n")
}

export fn bcm2837_get_peripheral_base(): u64 {
  return BCM2837_PERI_BASE
}
