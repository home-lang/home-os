export fn locale_list() {
  foundation.serial_write_string("\n[Locale] Available locales:\n")
  
  var i: u32 = 0
  while i < locale_count {
    foundation.serial_write_string("  ")
    foundation.serial_write_string(@ptrFromInt(locales[i].code))
    foundation.serial_write_string(" - ")
