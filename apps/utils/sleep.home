// home-os Sleep
// Delay for specified time

import "../../kernel/src/core/foundation.home" as foundation
import "../../kernel/src/drivers/timer.home" as timer

export fn sleep_main(seconds: u32) {
  foundation.vga_write_string("Sleeping for ")
  foundation.vga_write_string(" seconds...\n")
  
  timer.timer_sleep_ms(seconds * 1000)
  
  foundation.vga_write_string("Done\n")
}
