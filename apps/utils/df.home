// home-os Disk Free
// Show disk space usage

import "../../kernel/src/core/foundation.home" as foundation
import "../../kernel/src/core/filesystem.home" as filesystem

export fn df_main() {
  foundation.vga_clear()
  foundation.vga_write_string("=== Disk Free ===\n\n")
  foundation.vga_write_string("Filesystem      Size  Used  Avail Use%  Mounted on\n")
  foundation.vga_write_string("-----------------------------------------------\n")
  
  // Show mounted filesystems (stub)
  foundation.vga_write_string("/dev/sda1       10G   5G    5G   50%   /\n")
  foundation.vga_write_string("/dev/sda2       20G   8G   12G   40%   /home\n")
  foundation.vga_write_string("tmpfs          512M  64M  448M   13%   /tmp\n")
}
